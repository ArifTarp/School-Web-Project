@model E_Commercial.UI.Models.CategoryListViewModel;


<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item list-group-item-action";
        if (item.CategoryId==Model.CurrentCategoryId)
        {
            css += " active";
        }
        <a href="/product/index?categoryId=@item.CategoryId" class="@css">@item.CategoryName</a>
    }
</div>
